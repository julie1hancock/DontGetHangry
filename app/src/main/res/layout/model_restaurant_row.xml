<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/midDarkBlue"
    android:padding="8dp"
    android:id="@+id/root"
    >

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:id="@+id/rowCV"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/lightBlue"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/address"
        app:layout_constraintStart_toEndOf="@id/rowCV"
        android:id="@+id/name"
        android:textColor="@color/offwhite"
        tools:text="Chick-fil-A"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"

        style="@style/subheaderText"
        android:textSize="18dp"
        android:textStyle="bold"
        android:maxLines="3"
        android:layout_width="0dp"
        />
    <TextView
        android:paddingStart="12dp"
        android:paddingEnd="12dp"

        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toTopOf="@id/milesAway"
        app:layout_constraintStart_toEndOf="@id/rowCV"
        android:id="@+id/address"
        tools:text="484 W Bulldog Ln"
        android:textColor="@color/offwhite"
        style="@style/subheaderText"
        android:maxLines="3"
        android:layout_width="0dp"
        />
    <TextView
        android:paddingStart="12dp"
        android:paddingEnd="12dp"

        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/rowCV"
        android:id="@+id/milesAway"
        tools:text="Miles away: 7.2"
        android:textColor="@color/offwhite"
        style="@style/subheaderText"
        android:maxLines="3"
        android:layout_width="0dp"
        />

