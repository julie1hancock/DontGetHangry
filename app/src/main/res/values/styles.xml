<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

undo
    <style name="bottomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/midDarkBlue</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="bottomTextButSlightlySmaller" parent="bottomText">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="bottomTextButEvenSmaller" parent="bottomTextButSlightlySmaller">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="bottomTextButEvenSmallerDifferent" parent="bottomTextButEvenSmaller">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/midGray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/grayBlue</item>
    </style>

    <style name="headerButSlightlySmaller">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/grayBlue</item>
    </style>

    <style name="header2" parent="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/verypink</item>
    </style>

    <style name="titleText" parent="header">
        <item name="android:textColor">@color/midDarkBlue</item>
    </style>

    <style name="titleTextSmall" parent="titleText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/midDarkBlue</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">110dp</item>
        <item name="android:background">@drawable/btn</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/offwhite</item>
        <item name="android:text">Start Over</item>
    </style>

    <style name="bottomView" parent="titleTextSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">"Click logo to navigate"</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/grayBlue</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
